{
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@/*": ["../*"]
    },
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "scripthost"
    ],
    "sourceMap": false,
    "pretty": false
  }
}
